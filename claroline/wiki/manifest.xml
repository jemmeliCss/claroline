<module>
  <label>CLWIKI</label>
  <name>Wiki</name>
  <version>2.0</version>
  <license>GPL</license>
  <icon>wiki.gif</icon>
  <type>tool</type>
  <web>http://www.claroline.net/wiki/CLWIKI/</web>

  <description>
  <![CDATA[
     This is the original Wiki tool for the Claroline platform. It allows
     online collaborative edition of web pages using a simplified Wiki 
     syntax based on Olivier Meunier's wiki2xhtml renderer from the
     Dotclear blog project.
  ]]>
  </description>

  <author>
     <name>Claro team</name>
     <email>devteam@claroline.net</email>
     <web>http://www.claroline.net/</web>
  </author>

  <requirements>
    <claroline>
      <version>1.8</version>
      <configuration>
      </configuration>
    </claroline>
 </requirements>

  <context>

   <course database="kernel"
           enabling="automatic"
           default_access="all"
           access_manager="course_admin">
    <link target="commonToolList"
          path="wiki/wiki.php" />
    <link target="toolSelectBox"
          path="wiki/wiki.php" />
   </course>
   <group database="module"
          enabling="automatic"
          default_access="course_member"
          access_manager="platform_admin">
    <link target="commonToolList" path="wiki/wiki.php" />
   </group>

  </context>

 </module>
